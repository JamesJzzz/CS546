    <form id="static-form" method="post">
      <div class="form-group">
        <label for="word">Enter something to check:</label> <br>
        <input class="form-control" id="word" name="word" placeholder="Give me something" value="{{word}}">
      </div>
      <div class="form-group hidden" id="error-container">
        <div class="alert alert-danger text-goes-here">
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
      <div class="form-group hidden" id="result-container">
        <div class="alert alert-success text-goes-here">
        </div>
      </div>
    </form>
